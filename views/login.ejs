<% layout('/layout/page') %>
<% block('stylesheets', '<link href="/css/title.css" rel="stylesheet">') %>
<% block('scripts', '<script src="/js/login.js"></script>') %>

<style>
    small.error {
        color: red;
    }
</style>

<main>
    <%- partial('partials/title', {title: 'Login page'}) %>
    <div class="container">
        <div class="col-md-8 col-md-offset-2 col-sm-12">
            <a href="/registration"><button class="btn btn-lg btn-danger btn-block">Registration</button></a>
            <br>
            <form id="login_form">
                <div class="form-group" id="login_form">
                    <label for="login">Login</label>
                    <input type="text" class="form-control" name="login" id="login" aria-describedby="emailHelp"
                           placeholder="Enter login">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                           name="password">
                    <small class="form-text text-muted error"></small>
                </div>
                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
        </div>
    </div>
</main>
